update-alternatives --install /usr/share/plymouth/themes/default.plymouth default.plymouth /usr/share/plymouth/themes/guada/guada.plymouth 100
update-alternatives --install /usr/share/plymouth/themes/text.plymouth text.plymouth /usr/share/plymouth/themes/guada-text/guada-text.plymouth 100
update-alternatives --set default.plymouth /usr/share/plymouth/themes/guada/guada.plymouth 
update-alternatives --set text.plymouth /usr/share/plymouth/themes/guada-text/guada-text.plymouth
echo "FRAMEBUFFER=y" > /etc/initramfs-tools/conf.d/splash
update-initramfs -u
